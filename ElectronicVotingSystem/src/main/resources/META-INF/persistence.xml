<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="VotingAppPU">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.cg.votingapp.entity.CandidateEntity</class>
		<class>com.cg.votingapp.entity.PartyEntity</class>
		<class>com.cg.votingapp.dto.Party</class>
		<class>com.cg.votingapp.dto.Candidate</class>
		<class>com.cg.votingapp.dto.ResultEntity</class>
		<class>com.cg.votingapp.dto.ElectionPartyEntity</class>
		<properties>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost/contact" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="MeToono23$" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>